{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,

  "files.insertFinalNewline": true,

  "C_Cpp.default.cStandard": "c99",
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, BreakStringLiterals: false, ColumnLimit: 100, ContinuationIndentWidth: 4, IndentWidth: 4 }",
  "C_Cpp.doxygen.generatedStyle": "/**",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,

  "java.settings.url": ".vscode/settings.prefs",

  "prettier.printWidth": 100,

  "[c]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },

  "[java]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "redhat.java",
    "editor.tabSize": 4
  }
}
